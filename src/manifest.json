{
  "name": "海龜板遊戲統計小幫手",
  "description": "海龜板遊戲統計工具",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "page_action": {
    "default_title": "海龜板遊戲統計小幫手",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
